{% extends "base.jinja2" %}

{% block content %}
    <h3>Профиль {{ character.login }}</h3>
    <p>Хозяин:
        <a href="{{ url_for('profile.profile_page', username=character.user.username) }}">
            {{ character.user.username }}
        </a>
    </p>
    <h4>Внешность {{ character.login }}</h4>
    {{ character.appearance | markdown }}

    <h4>Квента {{ character.login }}</h4>
    {% if True %}
        <p>
            <strong>{{ character.name }}</strong>
            {{ character.story | markdown }}
        </p>
    {% else %}

    {% endif %}
{% endblock %}